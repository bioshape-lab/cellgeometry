[MASTER]

# Specify the maximum allowed code line length (default: 100)
max-line-length = 200

[MESSAGES CONTROL]

# Enable or disable specific pylint messages by message code
disable = C0103, C0114, C0115, C0116, C0301, R0903, R0913

[TYPECHECK]

# Set the type checking mode (strict, loose, none)
# Adjust according to your preference and project requirements
# type-checking-mode = strict

[REPORTS]

# Set the output format for the pylint report (text, colorized, parseable)
output-format = colorized

[BASIC]

# Set the expected naming style for variables (snake_case, camelCase, etc.)
# Adjust according to your preference and project conventions
variable-rgx = "[a-z_][a-z0-9_]{0,30}$"

[FORMAT]

# Set the expected naming style for functions (snake_case, camelCase, etc.)
# Adjust according to your preference and project conventions
function-rgx = "[a-z_][a-z0-9_]{0,30}$"

[DESIGN]

# Specify the maximum number of branches for a function or method (default: 12)
max-branches = 15

[IMPORTS]

# Set the import order style (certain, standard, app, or any other custom order)
# Adjust according to your preference and project conventions
import-order-style = app

[LOGGING]

# Enable or disable logging-related checks (logging-not-lazy, no-logging-else-logging)
disable = logging-not-lazy, no-logging-else-logging

[SIMILARITIES]

# Enable or disable the detection of similar lines (default: 0.7)
ignore-comments = yes
ignore-docstrings = yes

